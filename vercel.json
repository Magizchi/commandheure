{
    "version":2,

    "github":{
        "enable": false
    },
    "builds": [
        {
            "src":"/apps/client/dist/*",
            "use":"@now/static"
        }, 
        {
            "src":"/apps/api/src/main.ts",
            "use":"@vercel/node"
        }
    ],
    "routes":[
        {"src": "/(.*)", "dest":"/app/api/src/main.ts", "methods":["GET","POST","PUT"]}
    ]
}